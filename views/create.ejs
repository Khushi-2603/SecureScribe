<%- include('./partials/header.ejs') %>
    <div class="container mx-auto  h-full w-full">
        <div class="max-w-lg mx-auto bg-white   h-full w-full  rounded-lg ">
            <h2 class="text-2xl font-semibold mb-4">Create New Note</h2>
            <form action="/create" method="post">
                <div class="mb-4">
                    <input name="title" type="text" required placeholder="Anything "
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="mb-4">
                    <textarea name="description" required placeholder="Details"
                        class="resize-none w-full p-2 border border-gray-300 rounded h-32"></textarea>
                </div>
                <div class="mb-4">
                    <label class="inline-flex items-center">
                        <input name="encrypted" type="checkbox" class="form-checkbox">
                        <span class="ml-2">Encrypt this file</span>
                    </label>
                    <input name="passcode" type="password" placeholder="Passcode"
                        class="w-full mt-2 p-2 border border-gray-300 rounded">
                </div>
                <div class="mb-4">
                    <label class="inline-flex items-center">
                        <input name="shareable" type="checkbox" class="form-checkbox">
                        <span class="ml-2">Shareable file?</span>
                    </label>
                </div>
                <div class="mb-4">
                    <label class="inline-flex items-center">
                        <input name="editpermissions" type="checkbox" class="form-checkbox">
                        <span class="ml-2">Edit permissions.</span>
                    </label>
                </div>
                <div>
                    <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded">Create New Note</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>